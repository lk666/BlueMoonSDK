<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/shape_linearlayout_black"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivForToast"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvForToast"
        android:layout_width="fill_parent"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_large_18"
        android:layout_height="wrap_content" />

</LinearLayout><!-- From: file:/E:/android_apps/BlueMoonSDK/res/layout/toast_custome.xml -->